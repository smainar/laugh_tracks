<h1>All Comedians</h1>
<section class="statistics"
  <h2>Statistics</h2>
  <p><%= Comedian.average_age %></p>
</section>

<h1 class="intro">Header 1</h1>

<% @comedians.each do |comedian| %>
<section id='comedian-<%= comedian.id %>' >
  <%= image_tag(comedian.image) if comedian.image%>
  <h2><%= comedian.name %></h2>
  <h2><%= comedian.age %></h2>
  <h2><%= comedian.hometown %></h2>
</section>

<%comedian.specials.each do |special| %>
  <section id='special-<%= special.id %>' >
    <h2><%= special.name %></h2>
    <h2><%= special.runtime %></h2>
  </section>
  <% end %>
<% end %>
