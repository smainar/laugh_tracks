<html>
  <body style="background: #E0FFFF; color: black">
    <h1 class="intro"></h1>
    <h1 style="text-align: center">Laugh Tracks: Comedians/TV Specials</h1>
    <section class="statistics"
      <h2>Statistics</h2>
      <p>Average age of comedians: <%= @average_age %></p>
      <p>Hometowns: <%= @unique_cities %></p>
    </section>

  <main class="comedians-info"
    <% @comedians.each do |comedian| %>
    <section id='comedian-<%= comedian.id %>' >
      <%= image_tag(comedian.image, size: "200x300") if comedian.image%>
      <h2>Name: <%= comedian.name %></h2>
      <h3>Age: <%= comedian.age %></h2>
      <h3>Hometown: <%= comedian.hometown %></h2>
      <h3>Number of tv specials: <%= comedian.specials_count %></h2>
    </section>

    <div class="specials-container">
      <%comedian.specials.each do |special| %>
        <section id='special-<%= special.id %>' >
          <h3>Name: <%= special.name %></h3>
          <h4>Runtime: <%= special.runtime %></h4>
        </section>
        <% end %>
      </div>
      <% end %>
    </main>
  </body>
</html>
